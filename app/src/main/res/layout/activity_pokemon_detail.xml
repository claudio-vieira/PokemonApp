<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.pokemonapp.ui.PokemonDetailViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_gray"
        tools:context=".ui.PokemonDetailActivity">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageDetailPokemon"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:imageUrl="@{ viewmodel.pokemonDetailLiveData.sprites.other.officialArtwork.frontDefault }"
                    app:srcCompat="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@{viewmodel.pokemonDetailLiveData.name}"
                    android:gravity="center"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stats"
                    android:gravity="center"
                    android:layout_margin="5dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="3"
                    android:columnCount="2">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:padding="5dp"
                        app:cardBackgroundColor="@color/custom_white">

                        <FrameLayout
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textDetailHp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.pokemonDetailLiveData.stats.get(0).stat.name}"/>

                            <ProgressBar
                                android:id="@+id/progressHp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="@{viewmodel.pokemonDetailLiveData.stats.get(0).baseStat}"
                                android:layout_gravity="end|center"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/custom_white">

                        <FrameLayout
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textDetailAttack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.pokemonDetailLiveData.stats.get(1).stat.name}"/>

                            <ProgressBar
                                android:id="@+id/progressAttack"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="@{viewmodel.pokemonDetailLiveData.stats.get(1).baseStat}"
                                android:layout_gravity="end|center"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/custom_white">

                        <FrameLayout
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textDetailDefense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.pokemonDetailLiveData.stats.get(2).stat.name}"/>

                            <ProgressBar
                                android:id="@+id/progressDefense"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="@{viewmodel.pokemonDetailLiveData.stats.get(2).baseStat}"
                                android:layout_gravity="end|center"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/custom_white">

                        <FrameLayout
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textDetailSpecialAttack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.pokemonDetailLiveData.stats.get(3).stat.name}"/>

                            <ProgressBar
                                android:id="@+id/progressSpecialAttack"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="@{viewmodel.pokemonDetailLiveData.stats.get(3).baseStat}"
                                android:layout_gravity="end|center"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/custom_white">

                        <FrameLayout
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textDetailSpecialDefence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.pokemonDetailLiveData.stats.get(4).stat.name}"/>

                            <ProgressBar
                                android:id="@+id/progressSpecialDefence"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="@{viewmodel.pokemonDetailLiveData.stats.get(4).baseStat}"
                                android:layout_gravity="end|center"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/custom_white">

                        <FrameLayout
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <TextView
                                android:id="@+id/textDetailSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewmodel.pokemonDetailLiveData.stats.get(5).stat.name}"/>

                            <ProgressBar
                                android:id="@+id/progressSpeed"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progress="@{viewmodel.pokemonDetailLiveData.stats.get(5).baseStat}"
                                android:layout_gravity="end|center"/>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/abilities"
                    android:gravity="center"
                    android:layout_margin="5dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerDetailAbities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:padding="10dp"
                    tools:listitem="@layout/item_activity_detail"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>